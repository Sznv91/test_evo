<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.softvillage.test_evo">

    <!-- Разрешение на печать своих данных в чеке -->
    <uses-permission android:name="ru.evotor.permission.receipt.printExtra.SET" /> <!-- Разрешение на передачу чека по email или на телефон -->
    <uses-permission android:name="ru.evotor.permission.receipt.print.INTERNET_RECEIPT" />
    <uses-permission android:name="ru.evotor.pushnotifications.PUSH_RECEIVE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <!--    Для версии P (Android 9 : API level: 28)-->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />

    <!--    Интеренет для Retrofit-->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="ru.evotor.permission.receipt.print.INTERNET_RECEIPT" />
    <uses-permission android:name="ru.evotor.permission.receipt.print.INTERNET" />

    <application
        android:name=".EvoApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Test_evo">

        <receiver android:name=".services.receiver.BootBroadcastReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

        <receiver
            android:name=".services.receiver.PushReceiver"
            android:permission="ru.evotor.pushnotifications.PUSH_SENDER">
            <intent-filter>
                <action android:name="ru.evotor.pushnotifications.PUSH_RECEIVED_EVENT" />
            </intent-filter>
        </receiver>

        <service
            android:name=".services.MyService"
            android:enabled="true"
            android:exported="true"></service>
        <service
            android:name=".services.ForegroundServiceDispatcher"
            android:enabled="true"
            android:exported="true" />

        <meta-data
            android:name="app_uuid"
            android:value="54694711-ff29-4d15-a625-ff05ce706218" />

        <activity
            android:name=".MainActivity"
            android:icon="@mipmap/ic_launcher"
            android:label="Example tile">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.EVOTOR" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>