<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.softvillage.fiscalizer"
    android:installLocation="internalOnly">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" /> <!-- Для версии P (Android 9 : API level: 28) -->
    <!--    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW"/>-->
    <!--    <uses-permission android:name="android.permission.QUICKBOOT_POWERON" />-->
    <!-- Разрешение на печать своих данных в чеке -->
    <uses-permission android:name="ru.evotor.permission.receipt.printExtra.SET" /> <!-- Разрешение на передачу чека по email или на телефон -->
    <!--<uses-permission android:name="ru.evotor.permission.receipt.print.INTERNET_RECEIPT" />-->
    <uses-permission android:name="ru.evotor.pushnotifications.PUSH_RECEIVE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" /> <!-- Интеренет для Retrofit -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="ru.evotor.permission.receipt.print.INTERNET_RECEIPT" />
    <uses-permission android:name="ru.evotor.permission.receipt.print.INTERNET" />
    <uses-permission android:name="ru.evotor.permission.PRINT_Z_REPORT" />
    <!--Для печати произвольных данных на чековой ленте-->
    <uses-permission android:name="ru.evotor.permission.receipt.printExtra.SET" />
    <!--    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />-->

    <!--    android:usesCleartextTraffic="true"-->
    <application
        android:name="ru.softvillage.fiscalizer.EvoApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/NoActionBar">

        <receiver android:name="ru.softvillage.fiscalizer.services.receiver.BootBroadcastReceiver">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
                <action android:name="android.intent.action.LOCKED_BOOT_COMPLETED" />
            </intent-filter>
        </receiver>
        <receiver
            android:name="ru.softvillage.fiscalizer.services.receiver.InstallReceiver"
            android:enabled="true"
            android:exported="true">
            <intent-filter><!--
                <action android:name="android.intent.action.PACKAGE_ADDED" />
                <action android:name="android.intent.action.PACKAGE_REMOVED" />-->
                <action android:name="android.intent.action.MY_PACKAGE_REPLACED" />
                <!--                <action android:name="android.intent.action.PACKAGE_REPLACED" />-->

                <!--                <data android:scheme="package" />-->
            </intent-filter>
        </receiver>
        <receiver
            android:name="ru.softvillage.fiscalizer.services.receiver.PushReceiver"
            android:permission="ru.evotor.pushnotifications.PUSH_SENDER">
            <intent-filter>
                <action android:name="ru.evotor.pushnotifications.PUSH_RECEIVED_EVENT" />
            </intent-filter>
        </receiver>

        <!--<receiver android:name=".services.receiver.SessionCheckerReceiver" />-->

        <!--<service
            android:name=".services.MyService"
            android:enabled="true"
            android:exported="false" />-->
        <service
            android:name="ru.softvillage.fiscalizer.services.ForegroundServiceDispatcher"
            android:enabled="true"
            android:exported="false" />
        <service
            android:name="ru.softvillage.fiscalizer.services.SessionCloseWatcher"
            android:enabled="true" />
        <service
            android:name="ru.softvillage.fiscalizer.services.PrintDispatcher"
            android:enabled="true"
            android:exported="false" />

        <meta-data
            android:name="app_uuid"
            android:value="${uuid}" />

        <activity
            android:name="ru.softvillage.fiscalizer.MainActivity"
            android:label="SV Фискализатор"
            android:theme="@style/Theme.SWMailerTest.Launcher">
            <meta-data
                android:name="ru.evotor.launcher.BACKGROUND_COLOR"
                android:value="#67a520" />
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.EVOTOR" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>